{
    "name": "rss",
    "displayName": "RSS",
    "description": "A RSS reader embedded in Visual Studio Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration":{
            "title": "rss",
            "properties": {
                "rss.feeds": {
                    "type": "array",
                    "default": [],
                    "description": "A list of feeds"
                }
            }
        },
        "commands": [
            {
                "command": "rss.articles",
                "title": "Articles"
            },
            {
                "command": "rss.read",
                "title": "Read"
            },
            {
                "command": "rss.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "rss-reader",
                    "title": "RSS Reader",
                    "icon": "resources/rss.svg"
                }
            ]
        },
        "views": {
            "rss-reader": [
                {
                    "id": "rss-sources",
                    "name": "Sources"
                },
                {
                    "id": "rss-articles",
                    "name": "Articles"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "rss.refresh",
                    "when": "view == rss-sources",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.43.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/he": "^1.1.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.26.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "fast-xml-parser": "^3.16.0",
        "got": "10.6.0",
        "he": "^1.2.0"
	}
}
